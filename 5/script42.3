#!/bin/bash

# 3. Создайте сценарий, в котором в специально созданную директорию /usr/temp (создать команду mkdir), 
# копируется файл. Предварительно этот файл создайте с клавиатуры командой cat. После
# создания директории высветите ее содержимое и сделайте то же
# самое после копирования. 

DIR="/usr/temp"
FNAME="file"


if [ ! -d $DIR ]; then
    echo "Создаю $DIR"
    mkdir $DIR
fi

echo "$DIR до копирования"
ls -a $DIR

echo
echo "Наберите файл (<Ctrl-D> для прерывания)"
cat > temp__unique
cp temp__unique /usr/temp/$FNAME

echo
echo "$DIR после копирования"
ls -a $DIR
